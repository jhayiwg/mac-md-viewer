{
  "name": "md-viewer",
  "version": "1.0.0",
  "description": "A beautiful markdown viewer and editor for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder --mac",
    "pack": "electron-builder --dir"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "flowchart.js": "^1.18.0",
    "highlight.js": "^11.11.1",
    "html-to-docx": "^1.8.0",
    "katex": "^0.16.28",
    "marked": "^11.2.0",
    "mermaid": "^10.9.1",
    "raphael": "^2.3.0"
  },
  "build": {
    "appId": "com.mdviewer.app",
    "productName": "MD Viewer",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "role": "Editor"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ]
  }
}
